{
   "dataset_reader": {
      "token_indexers": {
         "bert": {
            "pretrained_model": "bert-base-uncased",
            "type": "bert-pretrained"
         }
      },
      "tokenizer": {
         "do_lowercase": true,
         "model_name": "bert-base-uncased",
         "type": "pretrained_transformer"
      },
      "type": "baseline_curiosity_dialog"
   },
   "iterator": {
      "batch_size": 4,
      "type": "basic"
   },
   "model": {
      "act_emb_size": 10,
      "bert_name": "bert-base-uncased",
      "bert_trainable": false,
      "dialog_context": {
         "hidden_dims": 100,
         "input_dim": 768,
         "num_layers": 1,
         "activations": "linear"
      },
      "disable_dialog_acts": false,
      "disable_facts": false,
      "disable_known_entities": false,
      "disable_likes": false,
      "dropout_prob": 0.1,
      "fact_loss_weight": 3,
      "fact_pos_weight": 9,
      "fact_ranker": {
         "similarity_function": {
            "tensor_1_dim": 100,
            "tensor_2_dim": 768,
            "type": "bilinear"
         },
         "type": "mean_logit_ranker"
      },
      "mention_embedder": {
         "mentions": {
            "embedding_dim": 100,
            "pretrained_file": "dialog_data/wiki2vec_entity_100d.txt",
            "trainable": false,
            "type": "embedding"
         }
      },
      "sender_emb_size": 10,
      "type": "baseline_curiosity_model",
      "use_bert": true,
      "use_glove": false,
      "utter_context": null,
      "utter_embedder": null
   },
   "train_data_path": "dialog_data/curiosity_dialogs.train.json",
   "trainer": {
      "num_epochs": 40,
      "num_serialized_models_to_keep": 10,
      "optimizer": {
         "lr": 0.001,
         "type": "adam"
      },
      "patience": 7,
      "validation_metric": "+total"
   },
   "validation_data_path": "dialog_data/curiosity_dialogs.val.json"
}
